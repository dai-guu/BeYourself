<p>コメント数:<%= post_comments.count %></p>
<% post_comments.includes([:user]).each do |post_comment| %>
  <div class="user_profile_image">
    <%= attachment_image_tag post_comment.user, :profile_image, fallback: "no_image.jpg", class:"comment-image", size: "40x40", style: "border-radius:50%;"%>
  </div>
  <%= post_comment.user.name %>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
          <% if post_comment.user == current_user %>
            <div>
               <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, remote: true %>
            </div>

          <% end %>

<% end %>