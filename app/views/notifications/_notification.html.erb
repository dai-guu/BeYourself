<div class="notification-view">
  <%#= notifications_path(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)}前)" %></span>

<span>
            <%= link_to user_path(notification.post_comment.user_id) do %>
            <%= attachment_image_tag notification.post_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: '100x100', style: "border-radius:50%;"%>
              <%= notification.post_comment.user.name%>
              <% end %>
              <br>
              <% if notification.post_image.user_id == notification.visited_id %>
                   <%= link_to "あなたの投稿にコメントしました。", notification.post_image, style: "font-weight: bold;" %>
              <% else %>

              <%= link_to post_image_path(notification.post_image) do %>
              <br>
              <strong>
               <%= notification.post_image.user.name + 'さんの投稿' + "にコメントしました。" %>
              </strong>
              <% end %>
              <% end %>
        <p class=text-muted.mb-0>
          <%=PostComment.find_by(id: notification.post_comment_id)&.comment%>
        <p>
      <%# end %>
</span>

  <br>
  <% if !@post_comment.nil? %>
    <p class="notification-comment"><%= @post_comment %></p>
  <% end %>
</div>